mixin advantages(data)
    +b.advantages
        .b-container
            +title({
                type: 'h2',
                title: data.title,
            }).--h2
            +e.slider.-js-slider
                +e.wrapper.-swiper-wrapper
                    each item in data.slider
                        include card-advantages.pug
                        +card-advantages(item).-swiper-slide
                include ui-kit/swiper-pagination.pug
                +swiper-pagination().--stock